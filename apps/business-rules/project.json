{
  "name": "business-rules",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/business-rules/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/business-rules",
        "main": "apps/business-rules/src/main.ts",
        "tsConfig": "apps/business-rules/tsconfig.app.json",
        "assets": ["apps/business-rules/src/assets"],
        "webpackConfig": "apps/business-rules/webpack.config.js"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "business-rules:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "business-rules:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/business-rules/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/business-rules/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "typeorm": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm/cli",
        "cwd": "apps/business-rules"
      }
    },
    "typeorm:create": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run business-rules:typeorm migration:create ../../libs/api/database/src/lib/migrations/{args.name}",
        "cwd": "apps/business-rules"
      }
    },
    "typeorm:generate": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run business-rules:typeorm migration:generate ../../libs/api/database/src/lib/migrations/{args.name} -d src/app/database/data.source.ts",
        "cwd": "apps/business-rules"
      }
    },
    "typeorm:run": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "nx run business-rules:typeorm migration:run -d ../../libs/api/database/src/lib/data.source.ts",
        "cwd": "apps/business-rules"
      }
    }
  },
  "tags": []
}
